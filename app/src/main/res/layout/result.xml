<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:scaleType="fitCenter"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp">

        <Button
            android:text="人脸识别"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rcFace"
            android:onClick="rcFace"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图像识别"
            android:id="@+id/rcPic"
            android:onClick="rcPic"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp" />

        <Button
            android:text="文字识别"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rcText"
            android:onClick="rcText"
            android:layout_marginStart="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/rcFace" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传"
            android:id="@+id/upload"
            android:onClick="doPost"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/uptofacepp"
            android:layout_marginStart="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:id="@+id/back1"
            android:onClick="back"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/upload"
            android:layout_marginStart="55dp" />


    </RelativeLayout>

    <TextView
        android:text=""
        android:textSize="20dp"
        android:scrollbars="vertical"
        android:textIsSelectable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView"
        android:layout_alignParentStart="true" />

</LinearLayout>
